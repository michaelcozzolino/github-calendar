{
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "packageManager": "yarn@4.11.0",
    "engines": {
        "node": ">=20.19.0"
    },
    "scripts": {
        "dev": "yarn concurrently \"yarn workspace github-calendar dev\" \"yarn workspace github-calendar-docs dev\"",
        "build": "yarn workspaces foreach -Apt run build",
        "lint": "yarn workspaces foreach -Apt run lint",
        "test": "vitest run",
        "test-coverage": "vitest run --coverage",
        "audit": "yarn npm audit --all"
    },
    "devDependencies": {
        "@michaelcozzolino/eslint-config": "^1.1.3",
        "@vitest/coverage-v8": "^3.2.4",
        "@vue/test-utils": "^2.4.6",
        "concurrently": "^9.2.1",
        "eslint": "^9.37.0",
        "typescript": "^5.9.3",
        "vitest": "^3.2.4",
        "vue-tsc": "^3.1.1"
    },
    "resolutions": {
        "@iconify/vue": "^4.3.0",
        "@types/node": "^22.18.8",
        "@vitejs/plugin-vue": "^5.2.4",
        "@vue/test-utils": "^2.4.6",
        "@vue/tsconfig": "^0.8.1",
        "@vueuse/core": "^14.1.0",
        "concurrently": "^9.2.1",
        "flyonui": "^2.4.1",
        "flyonui-vue": "*",
        "jsdom": "^26.1.0",
        "sass-embedded": "^1.93.2",
        "tailwindcss": "^4.1.16",
        "tsc-alias": "^1.8.16",
        "typescript": "^5.9.3",
        "vite": "^7.3.0",
        "vitest": "^3.2.4",
        "vue": "^3.5.22",
        "vue-router": "^4.5.1",
        "vue-tsc": "^3.1.1"
    }
}
